@using Roshalonline.Web.Models
@model List<NewsVM>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/management-news.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    <script src="~/scripts/jquery-1.9.1.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" style="border: 0px;">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand small-logo" style="padding-left:15px; padding-top: 8px;" href="#">
                    <img alt="Logo" src="~/Assets/Logos/current_main_logo_32x137px.png">
                </a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><p class="navbar-text">Вы вошли как</p> </li>
                    <li><a href="#">@User.Identity.Name</a></li>
                    <li class="active"><a href="/Management/Logout" /><span class="glyphicon glyphicon-log-out"></span>Выйти</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar" style="padding-top: 50px; width: 250px;">
                <ul class="nav nav-sidebar">
                    <li class="sub-header" style="font-size: 16px; padding-top: 10px; padding-left: 15px;">Управление новостями</li>
                </ul>
                <ul class="nav nav-sidebar">
                    <li class="nav-divider"></li>
                    <li class="active">@Html.ActionLink("Общая информация", "Index", "Management")</li>
                </ul>
                <ul class="nav nav-sidebar">
                    <li class="nav-divider"></li>
                    <li>@Html.ActionLink("Управление новостями", "News", "Management")</li>
                    <li>@Html.ActionLink("Управление заметками", "Notes", "Management") </li>
                    <li>@Html.ActionLink("Управление тарифами", "Tarifs", "Management")</li>
                    <li>@Html.ActionLink("Управление продукцией", "Products", "Management")</li>
                    <li>@Html.ActionLink("Обращения абонентов", "Feedbacks", "Management")</li>
                </ul>
                <ul class="nav nav-sidebar">
                    <li class="nav-divider"></li>
                    <li><a href="#">Настройки</a></li>
                </ul>
            </div>            
            <div class="table-responsive" style="padding-top: 55.5px;">
                <table class="table table-striped">
                    <thead style="padding-top: 50px;">
                        <tr>                            
                            <th class="text-center">ID</th>
                            <th class="text-center">Название</th>
                            <th class="text-center">Автор</th>
                            <th class="text-center">Категория</th>
                            <th class="text-center">Дата создания</th>
                            <th class="text-center">Просмотры</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var n in Model)
                        {
                            <tr onclick="location.href='@Url.Action("EditNews", "Management", new { n.ID })'" onmouseover="this.style.cursor='pointer'">
                                <td class="text-center">@n.ID</td>
                                <td class="text-center">@n.Header</td>
                                <td class="text-center">@n.Author</td>
                                <td class="text-center">@n.Category</td>
                                <td class="text-center">@n.CreateDate</td>
                                <td class="text-center">@n.ViewsCount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>





