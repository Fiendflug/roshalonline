                <button type="button" class="btn-group btn-default" role="group" style="width: 70px;">Все</button>
                <button type="button" class="btn-group btn-default" role="group" style="width: 70px;">Активные</button>
                <button type="button" class="btn-group btn-default" role="group" style="width: 70px;">Архивные</button>

