@using Roshalonline.Web.Models
@model List<NewsVM>

@{
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Управление новостями</title>
</head>
<body>
    <div class="container-fluid" style="padding-top: 50px;">          
        <div class="row" style="position: fixed; width: 100%; background-color: white;">
            <div class="btn-group-xs pull-left" style="padding-left: 10px; padding-right: 10px; padding-top: 10px;">
                <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("CreateNews", "Management")'">Создать новость</button>
            </div>
            <div class="btn-group-xs pull-right" style="padding-left: 10px; padding-right: 10px; padding-top: 10px;">
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("News", "Management")'">Все</button>
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("FiltredNews", "Management", new { filter = 1 })'">Активные</button>
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("FiltredNews", "Management", new { filter = 2 })'">Архивные</button>
            </div>
        </div>
        <div class="row" style="padding-top: 40px;">
            <table class="table table-striped table-condensed table-bordered table-hover">
                <tr>
                    <th class="text-center">ID</th>
                    <th class="text-center">Название</th>
                    <th class="text-center">Автор</th>
                    <th class="text-center">Категория</th>
                    <th class="text-center">Дата создания</th>
                    <th class="text-center">Просмотры</th>
                </tr>
                @foreach (var n in Model)
                {
                    <tr onclick="location.href='@Url.Action("EditNews", "Management", new { n.ID })'" onmouseover="this.style.cursor='pointer'">
                        <td class="text-center">@n.ID</td>
                        <td class="text-center">@n.Header</td>
                        <td class="text-center">@n.Author</td>
                        <td class="text-center">@n.Category</td>
                        <td class="text-center">@n.CreateDate</td>
                        <td class="text-center">@n.ViewsCount</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</body>
</html>
