@model Roshalonline.Web.Models.NewsVM

@{
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewNews</title>
</head>
<body>
    <div>
        <h6>@Model.ID   @Model.Header</h6>
        @Model.CreateDate
        @Model.Author
        @Model.Category
        @Model.PathToIcon
        @Model.Body
        @Model.ViewsCount
    </div>
    <div>
        @Html.ActionLink("Назад", "News")
        @Html.ActionLink("Редактировать", "EditNews", new { id = Model.ID })
    </div>
    <div class="logout">
        @Html.ActionLink("Выйти", "Logout")
    </div>
</body>
</html>
